<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GuessNumberActivity"
    android:id="@+id/guess_number">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/AppTheme.NumberDisplay"
        android:text="N"
        android:id="@+id/number3"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/number_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="N"
        android:id="@+id/number4"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/number3"
        android:layout_toEndOf="@+id/number3"
        android:layout_alignBaseline="@+id/number3"
        android:layout_margin="@dimen/number_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="N"
        android:id="@+id/number2"
        android:layout_gravity="center"
        android:layout_toStartOf="@+id/number3"
        android:layout_toLeftOf="@+id/number3"
        android:layout_margin="@dimen/number_margin"
        android:layout_alignBaseline="@+id/number3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="N"
        android:id="@+id/number1"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/number2"
        android:layout_toStartOf="@+id/number2"
        android:layout_alignBaseline="@+id/number3"
        android:layout_margin="@dimen/number_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="N"
        android:id="@+id/number5"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/number4"
        android:layout_toRightOf="@+id/number4"
        android:layout_toEndOf="@+id/number4"
        android:layout_margin="@dimen/number_margin"
        android:layout_alignBaseline="@+id/number3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guess_number_input"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:imeOptions="actionDone"
        android:inputType="number" />

</RelativeLayout>
